# 环境变量配置文件示例
# 复制此文件为 .env 并修改相应的值

# 应用配置
APP_NAME=Authing
APP_VERSION=1.0.0
APP_DEBUG=false
APP_ENV=production

# 服务器配置
HOST=0.0.0.0
PORT=7000

# 数据库配置
DATABASE_URL=sqlite:///app/data/authing.db
# 如果使用 PostgreSQL：
# DATABASE_URL=postgresql://username:password@localhost:5432/authing
# 如果使用 MySQL：
# DATABASE_URL=mysql://username:password@localhost:3306/authing

# JWT 配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 邮件配置（用于发送验证码等）
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your-email@qq.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=your-email@qq.com
SMTP_FROM_NAME=Authing

# 短信配置（用于发送 OTP）
SMS_PROVIDER=aliyun
# 阿里云短信配置
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
ALIYUN_SMS_REGION=cn-hangzhou
ALIYUN_SMS_SIGN_NAME=your-signature-name
ALIYUN_SMS_TEMPLATE_CODE=SMS_123456789

# Redis 配置（可选，用于缓存和会话存储）
REDIS_URL=redis://localhost:6379/0
# 如果不使用 Redis，请注释掉上面的配置

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:7001,http://127.0.0.1:3000,http://127.0.0.1:7001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
BCRYPT_ROUNDS=12

# Docker 配置
APP_UID=1000
APP_GID=1000

# 用户池配置
DEFAULT_USER_POOL_ID=1
DEFAULT_APP_ID=default-app

# 功能开关
ENABLE_REGISTRATION=true
ENABLE_OTP_LOGIN=true
ENABLE_QR_LOGIN=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PHONE_VERIFICATION=false

# API 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# 监控配置
ENABLE_METRICS=false
METRICS_PORT=9090

# 健康检查配置
HEALTH_CHECK_TIMEOUT=30
