# 生产环境配置
APP_NAME=Authing
APP_VERSION=1.0.0
APP_DEBUG=false
APP_ENV=production

# 服务器配置
HOST=0.0.0.0
PORT=7000

# 数据库配置
DATABASE_URL=sqlite:///app/data/authing.db

# JWT 配置 - 生产环境请修改为随机密钥
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS 配置
CORS_ORIGINS=http://localhost:7001,http://127.0.0.1:7001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# 安全配置
SECRET_KEY=change-this-secret-key-in-production
BCRYPT_ROUNDS=12

# Docker 配置
APP_UID=1000
APP_GID=1000

# 用户池配置
DEFAULT_USER_POOL_ID=1
DEFAULT_APP_ID=default-app

# 功能开关
ENABLE_REGISTRATION=true
ENABLE_OTP_LOGIN=true
ENABLE_QR_LOGIN=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PHONE_VERIFICATION=false

# API 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
